flush > /opt/app/current/conf/caddy/caddyfile << CADDYFILE_EOF
{
        admin off
        auto_https off
        persist_config off
        order upload before file_server
        log {
                output file /data/caddy/caddy.log
        }
}

:80 {
        vars {
                rootDir "/data"
        }

        root {vars.rootDir}

        handle /data/analysis* {
                file_server browse
        }

        handle /data/dump* {
                file_server browse
        }

        handle /data/logs* {
                file_server browse
        }

        file_server

        templates

        @mypost method POST
        upload @mypost {
                dest_dir /data/analysis
                max_form_buffer 1G
                max_filesize 500MB
                response_template templates/upload-resp-template.txt
        }
}
CADDYFILE_EOF
